<img src="images/bat.png" >
<h2 class="ui-bar ui-bar-a">Logan Square Late Nite Taco Delivery</h2>
<form name="taco_form" action="order" method="POST">
  <div class="ui-body">
    <div class="ui-grid-a ui-responsive">
      <div class="ui-block-a">
	    <h3 class="ui-bar ui-bar-a">Steak Tacos</h3>
    	<p class="ui-body">Marinated Skirt Steak, Cheese, Cilantro, Onions</p>
	  </div>
	  <div class="ui-block-b">
	    <h3 class="ui-bar ui-bar-a">&nbsp;</h3>
        <div data-role="fieldcontain" class="ui-body">
          <label for="slider-c">$6(two tacos)</label>
          <input type="range" name="steak" id="steak" value="0" min="0" max="10"  />
        </div>
	  </div>
      <div class="ui-block-a">
	    <h3 class="ui-bar ui-bar-a">Chicken Tacos</h3>
    	<p class="ui-body">Slow-roasted Pulled Chicken, Pickled Onions</p>
	  </div>
	  <div class="ui-block-b">
	    <h3 class="ui-bar ui-bar-a">&nbsp;</h3>
        <div data-role="fieldcontain" class="ui-body">
          <label for="slider-c">$6(two tacos)</label>
          <input type="range" name="chicken" id="chicken" value="0" min="0" max="10"  />
        </div>
	  </div>
      <div class="ui-block-a">
	  </div>
	  <div class="ui-block-b">
	    <% if @itslit %>
  		  <button type="submit" class="ui-btn ui-corner-all">Order</button>
  		<% else %>
  		  <p> Not yet, soon though.</p>
  		  <p>Satuday, from 9pm-2:30am</p>
  		<% end %>
	  </div>

	</div>
  </div>
</form>
